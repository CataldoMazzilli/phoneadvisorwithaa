<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vulpes.phoneadvisorwithaa" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.BrandActivity_"
            android:label="@string/title_activity_brand" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PhoneListActivity_"
            android:label="@string/title_activity_phone_list"
            android:parentActivityName=".activities.BrandActivity_" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vulpes.phoneadvisorwithaa.activities.BrandActivity" />
        </activity>
        <activity
            android:name=".activities.FavouritesActivity_"
            android:label="@string/title_activity_favourites"
            android:parentActivityName=".activities.BrandActivity_" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vulpes.phoneadvisorwithaa.activities.BrandActivity" />
        </activity>
        <activity
            android:name=".activities.InfoActivity_"
            android:label="@string/title_activity_info"
            android:parentActivityName=".activities.BrandActivity_" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vulpes.phoneadvisorwithaa.activities.BrandActivity" />
        </activity>
    </application>

</manifest>
